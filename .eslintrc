{
	"extends": "twipped/node",
	"parser": "babel-eslint",
	parserOptions: {
		'ecmaVersion': 2018,
		sourceType: 'module',
	},
	"rules": {
		"promise/no-native": 0,
		"max-len": 0,
		"node/no-unsupported-features/es-syntax": "off",
		"node/no-unpublished-import": ["error", {
            "allowModules": ["date-fns"]
        }],
        "no-negated-condition": 0,
        "no-unused-expressions": ["error", { "allowShortCircuit": true }]
	}
}
